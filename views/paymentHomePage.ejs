<div class="row-mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Payment Gateway</h1>
                
                <form action="/benion-payments/payment" method="POST" autocomplete="off">
                    <div class="form-group">
                        <label for="username">Reciever's Username</label>
                        <input type="text" class="form-control" name="username" id="username" placeholder="Enter Reciever's Username" value="<%= typeof username != 'undefined' ? username: '' %>">
                    </div>
                    <div class="form-group">
                        <label for="email">Sender's Email</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Enter Your Email Address" value="<%= typeof email != 'undefined' ? email: '' %>">
                    </div>
                    <div class="form-group">
                        <label for="amount">Amount</label>
                        <input type="number" class="form-control" name="amount" id="amount" placeholder="Enter Amount" value="<%= typeof amount != 'undefined' ? amount: '' %>">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Make Payment</button>
                </form>
            </div>
        </div>
    </div>